<% if object.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(object.errors.count, "error") %>
      prohibited this discipline from being saved:
    </h2>

    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <!-- #validation displays extra password missing error twice -->
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for object do |f| %>

  <%= f.fields_for :disciplines do |dis| %>

    <% if dis.object.title.blank? %>
      <%= dis.label :title %><br>
      <%= dis.text_field :title %><br>

      <%= dis.label :content %><br>
      <%= dis.text_field :content %><br>

      <%= dis.label :duration %><br>
      <%= dis.text_field :duration %><br>
    <% end %>

  <% end %>

  <br></br>

  <%= f.password_field :password %>

  <%= f.submit "Add Discipline"%>
<% end %>
