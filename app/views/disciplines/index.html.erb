<h1>Disciplines</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>

      <td><strong>Title</strong></td>
      <td><strong>Content</strong></td>
      <td><strong>Duration</strong></td>

    </tr>
    <% @disciplines.each do |discipline| %>
      <tr>

        <td><%= discipline.title %></td>
        <td><%= discipline.content %></td>
        <td><%= discipline.duration %></td>
        <td><%= link_to "X", discipline, method: :delete, data: { confirm: "Really?" } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br></br>

<%= link_to "Add Discipline", new_discipline_path %>
