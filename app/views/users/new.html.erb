<%= form_for user = User.new, url: signup_path do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :birthdate %><br>
  <%= f.date_field :birthdate %><br>

  <%= f.label :email %><br>
  <%= f.text_field :email %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %>

  <br></br>

  <%= f.submit "Get me started" %>
<% end %>
