<% if errors != nil %>
<div>

    <% if errors.kind_of?(Array) %>
      <h2>
        <%= pluralize(errors.count, "error") %>
        <%= "prohibited #{object.name} from being saved:" %>
      </h2>

      <ul>
        <% errors.each do |msg| %>

        <li class="red"><%= msg %></li>
        <% end %>
      </ul>
    <% elsif errors.kind_of?(String) %>
    <h2 class="red">
      <%= errors %>
    </h2>
    <% end %>
</div>
<% end %>


<%= form_for object, url: url do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :birthdate %><br>
  <%= f.date_field :birthdate %><br>

  <%= f.label :email %><br>
  <%= f.text_field :email %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %>

  <br></br>

  <%= f.hidden_field :controller, :value => "#{controller_name}" %>
  <%= f.hidden_field :action, :value => "#{action_name}" %>

  <%= f.submit class: "button" %>
<% end %>
