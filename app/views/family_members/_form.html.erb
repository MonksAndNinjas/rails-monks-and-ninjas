<%= form_for object do |f| %>

  <%= f.fields_for :family_members do |mem| %>

  <% if mem.object.name.blank? %>
      <%= mem.label :name %>
      <%= mem.text_field :name %><br>

      <%= mem.label :birthdate %>
      <%= mem.date_field :birthdate %><br>

      <%= mem.label :relationship %>
      <%= mem.text_field :relationship %><br>

      <%= mem.label :location %>
      <%= mem.text_field :location %><br>

      <%= mem.label :contact %>
      <%= mem.text_field :contact %><br>

      <%= mem.label :relationship_status %>
      <%= mem.text_field :relationship_status %>
    <% end %>
  <% end %>

  <br></br>

  <%= f.password_field :password %>

  <%= f.submit "Create Family Member"%>
<% end %>
