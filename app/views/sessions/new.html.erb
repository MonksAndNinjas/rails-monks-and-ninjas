<h1>Log In</h1>

<%= form_for user = User.new, url: login_path do |f| %>
  <%= f.label :email %><br>
  <%= f.text_field :email %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %>

  <br></br>

  <%= f.submit "Let's get going" %>
<% end %>

<br></br>

or,<br>

<%= link_to('Log in with Facebook!', '/auth/facebook') %>
