<%= form_for User.new, url: login_path do |f| %>
  <%= f.label :email, class: "comp-font shadow" %><br>
  <%= f.text_field :email, class: "input" %><br>

  <%= f.label :password, class: "comp-font shadow" %><br>
  <%= f.password_field :password, class: "input" %>

  <br></br>

  <%= f.submit "Let's get going", class: "button comp-font" %>
<% end %>
