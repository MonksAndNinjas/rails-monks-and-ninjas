<%= form_for object do |f| %>

  <%= f.fields_for :nested_attributes do |attr| %>
    <% @nested_attribute.nested_attributes_keys.each do |key| %>

      <%= attr.label "#{key.to_s}" unless @nested_attribute.create_label?(key) %><br>

      <% data_type = @nested_attribute.get_data_type_for(key) %>

      <%= create_field_using(key, data_type, attr) %><br>

    <% end %>
  <% end %>

  <br></br>

  <%= f.password_field :password %>

  <%= f.submit "Create"%>
<% end %>
