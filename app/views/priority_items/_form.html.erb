<%= form_for object do |f| %>

  <%= f.fields_for :priority_items do |itm| %>

    <% if itm.object.title.blank? %>
      <%= itm.label :title %><br>
      <%= itm.text_field :title %><br>

      <%= itm.label :description %><br>
      <%= itm.text_area :description %><br>
    <% end %>

  <% end %>

  <br></br>

  <%= f.password_field :password %>

  <%= f.submit "Add item"%>
<% end %>
