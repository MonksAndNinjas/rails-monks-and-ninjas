<h1>Your Priorities</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @priority_items %>

      <% @priority_items.each do |item| %>
        <tr>

          <td>Title: </td>
          <td><%= item.title %></td>
          <td><%= item.description %></td>

        </tr>
      <% end %>

    <% end %>
  </tbody>
</table>

<%= render partial: 'form', locals: {object: @priority_item } %>
