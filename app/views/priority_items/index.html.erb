<h1>Your Priorities</h1>

<p>Most urgent tasks</p>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @priority_items %>

      <% @priority_items.each do |item| %>
        <tr>

          <td>Title: </td>
          <td><%= item.title %> =></td>
          <td><%= item.description %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td><%= link_to "X", item, method: :delete, data: { confirm: "Really?" } %></td>
      <% end %>

    <% end %>
  </tbody>
</table>

<br></br>

<%= link_to "Add Item", new_priority_item_path %>
