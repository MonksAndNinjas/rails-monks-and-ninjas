<h1>Your Priorities</h1>

<p>Most urgent tasks</p>

<% if @priority_items %>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>

        <% @priority_items.each do |item| %>
          <tr>

            <td>To Do: </td>
            <td><%= item.title %></td>
            <td>
              <br></br>

               => <%= item.description %>&nbsp;&nbsp;&nbsp;&nbsp;
            </td>
            <td><%= link_to "X", item, method: :delete, data: { confirm: "Really?" } %></td>

          </tr>
        <% end %>
    </tbody>
  </table>

  <br></br>

  <% if @priority_items.size < 3 %>
    <%= link_to "Add Item", new_priority_item_path %>
  <% end %>
<% else %>

  <%= link_to "Add Item", new_priority_item_path %>
<% end %>
