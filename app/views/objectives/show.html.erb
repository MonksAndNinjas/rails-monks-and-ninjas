<%= form_for @quest = @current_user.quests.build, url: quests_path do |f| %><!-- move into partial -->
  <%= f.number_field :user_id, type: "hidden", value: @current_user.id %>
  <%= f.number_field :objective_id, type: "hidden", value: @objective.id %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "Go on a #{@objective.duration} quest" %>
<% end %><br>
