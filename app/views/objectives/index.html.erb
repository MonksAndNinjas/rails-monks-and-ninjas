<h1>Your Quests</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>

      <td><strong>Type</strong></td>
      <td><strong>Title</strong></td>
      <td><strong>Description</strong></td>

    </tr>
    <% @quests.each do |quest| %>
      <tr>

        <td><%= Objective.find_by_id(quest.objective_id).duration.capitalize %> Term</td><!-- create helper_method for this line -->
        <td><%= quest.title %></td>
        <td><%= quest.description %></td>
        <td><%= link_to "X", objective_quest_path(quest.objective_id, quest.id), method: :delete, data: { confirm: "Really?" } %>
          /<%= link_to "E", edit_objective_quest_path(quest.objective_id, quest.id) %></td>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br></br>

<% @objectives.each do |objective| %>
  <%= link_to "Go on #{objective.duration.capitalize} Quest", new_objective_quest_path(objective) %><br><!-- this line too -->
<% end %>
