<h1>Your Quests</h1>

<% @quests.each do |quest| %>
  <strong><%= Objective.find_by_id(quest.objective_id).duration %></strong>
  <strong><%= quest.title %></strong>
  <strong><%= quest.description %></strong>

  <br></br>
<% end %>

<% @objectives.each do |objective| %>
  <% @objective = objective %>

  <%= form_for @quest = @current_user.quests.build, url: quests_path do |f| %>
    <%= f.number_field :user_id, type: "hidden", value: @current_user.id %>
    <%= f.number_field :objective_id, type: "hidden", value: @objective.id %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit "Go on a #{@objective.duration} quest" %>
  <% end %><br>
<% end %>

<br></br>

<p>
  You can have up to two short term and one long term quest.
</p>
