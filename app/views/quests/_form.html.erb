<%= form_for object do |f| %>

    <%= f.fields_for :quests do |quest| %>
      <% if quest.object.title.blank? || quest.object == Quest.find_by(id: params[:id]) %>
        <%= quest.label :title %><br>
        <%= quest.text_field :title %><br>

        <%= quest.label :description %><br>
        <%= quest.text_field :description %><br>

        <%= quest.number_field :objective_id, value: @objective.id, type: "hidden" %>
      <% end %>
    <% end %>


  <br></br>

  <%= f.password_field :password %>

  <%= f.submit "Add Quest"%>
<% end %>
