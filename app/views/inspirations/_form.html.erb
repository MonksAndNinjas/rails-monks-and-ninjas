<% if object.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(object.errors.count, "error") %>
      prohibited this inspiration from being saved:
    </h2>

    <ul>
    <% object.errors.full_messages.each do |msg| %>

      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>



<%= form_for object do |f| %>

  <%= f.fields_for :inspirations do |ins| %>

  <% if ins.object.source.blank? || ins.object == Inspiration.find_by(id: params[:id])%>
    <%= ins.label :source %><br>
    <%= ins.text_field :source, placeholder: "required" %><br>

    <%= ins.label :about %><br>
    <%= ins.text_field :about, placeholder: "required" %><br>

    <p>What would you like to add?</p>

    <%= ins.label :image %><br>
    <%= ins.text_field :image %><br>

    <%= ins.label :link %><br>
    <%= ins.text_field :link %><br>

    <%= ins.label :video %><br>
    <%= ins.text_field :video %><br>

    <%= ins.label :content %><br>
    <%= ins.text_field :content %><br>
    <% end %>

  <% end %>

  <br></br>

  <%= f.password_field :password %>

  <%= f.submit "Inspire Me"%>
<% end %>
