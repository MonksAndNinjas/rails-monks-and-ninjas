<h1><%= @inspiration.source %></h1>

<p><%= @inspiration.about %></p>

<% if !@inspiration.image.blank? %>
  <label>Image: </label>
  <strong><a href="<%= @inspiration.image %>"><%= @inspiration.image %></a></strong>

  <br></br>
<% end %>

<% if !@inspiration.link.blank? %>
  <label>Link: </label>
  <strong><a href="<%= @inspiration.link %>"><%= @inspiration.link %></a></strong>

  <br></br>
<% end %>

<% if !@inspiration.content.blank? %>
  <label>Content: </label>
  <strong><%= @inspiration.content %></strong>

  <br></br>
<% end %>

<% if !@inspiration.video.blank? %>
<label>Video: </label>
  <strong><a href="<%= @inspiration.video %>"><%= @inspiration.video %></a></strong>
<% end %>

<%= link_to "Edit Inspiration", edit_inspiration_path(@inspiration) %><br>
<%= link_to "X", @inspiration, method: :delete, data: { confirm: "Really?" } %>
